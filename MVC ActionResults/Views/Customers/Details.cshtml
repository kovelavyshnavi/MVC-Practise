@model MVC_ActionResults.Models.Customers


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hai @Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name </li>

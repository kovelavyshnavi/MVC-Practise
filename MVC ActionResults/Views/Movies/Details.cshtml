@model MVC_ActionResults.Models.Movies

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>
<ul>
    <li>
        Genre:@Model.Genre.Name
    </li>
    <li>
        ReleaseDate:@Model.ReleaseDate.ToLongDateString()
    </li>
    <li>
        DateAdded: @Model.DateAdded.ToLongDateString()
    </li>
    <li>
        NumberInStocks: @Model.NumberInStock
    </li>
</ul>

